<div class="col-md-12 col-lg-12" id="app" v-cloak>
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                Add New WorkProgress Entry
            </h3>
        </div>
        <div class="card-body">
            <div class="row ">

                @* Table - Start *@
                <table id="workprogress_entry" class="table table-bordered table-striped Items table-responsive" style="width:100%">
                    <thead>
                        <tr class="bg-secondary">
                            <th colspan="3">
                                <h4>Fund Utilization Details</h4>
                            </th>
                        </tr>
                        <tr>
                            <th style="width: 15%">#</th>
                            <th>Previous Entry Data</th>
                            <th>Current Entry Data</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <label for="fundUtilizedDept">Department Fund Utilized</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.fundutilizeddept, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                            </td>
                            <td>
                                <input type="text" required class="form-control" v-model="workprogress.fundutilizeddept" />
                            </td>

                        </tr>
                        <tr>
                            <td>
                                <label for="fundutilizedMgnrega">MGNREGA Fund Utilized</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.fundutilizedmgnrega, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                            </td>
                            <td>
                                <input type="text" required class="form-control" v-model="workprogress.fundutilizedmgnrega" />
                            </td>

                        </tr>
                        <tr>
                            <td>
                                <label for="fundUtilized">Total Fund Utilized</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.fundutilized, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                            </td>
                            <td>
                                <input type="text" required class="form-control" v-model="workprogress.fundutilized" />
                            </td>

                        </tr>
                        <tr>
                            <td>
                                <label for="dateOfUtilization">Date of Utilization</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.dateofutilization, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                            </td>
                            <td>
                                <input type="date" required class="form-control" v-model="workprogress.dateofutilization" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="workStatus">Status of Work</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.workstatus, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                            </td>
                            <td>
                                <select class="form-control select2" v-model="workprogress.workstatus">
                                    <option value="Not Started">Not Started</option>
                                    <option value="Ongoing">Ongoing</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Not Completed">Not Completed</option>
                                    <option value="Others">Others</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="mandaysGenerated">No. of Mandays Generated</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.mandaysgenerated, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                            </td>
                            <td>
                                <input type="text" required class="form-control" v-model="workprogress.mandaysgenerated" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="remarks">Remarks</label>
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.remarks, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                            </td>
                            <td>
                                <input type="text" required class="form-control" v-model="workprogress.remarks" />
                            </td>
                        </tr>
                    </tbody>
                </table>
                @* Table - End *@

               
                <div class="box-body">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="geotagPhotoUpload">Upload Photo</label>
                            <input type="file" id="filename_c" value="No Files Chosen" ref="gg" />
                            @*<input type="button" id="btnUpload" value="Upload PDF" class="btn btn-info" />*@
                        </div>

                    </div>
                </div>



                @* Form End here *@

                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">@Session["district"]</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->

                        <div class="box-body">

                            <!---wizard-->
                            <!---end wizard-->



                        </div>
