@model IEnumerable<MLAFund.Models.Data.convergence>

@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section bc{




    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active">MLA Fund</li>
    </ol>

}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
                <div class="inner">
                    <h4>Fund Alloted</h4>
                    <p>For Current Financial Year</p>
                </div>
                <div class="icon">
                    @*<i class="ion ion-bag"></i>*@
                    <i class="ion">@ViewBag.fundAlloted</i>
                </div>
               @* <a href="/Convergence/ConvergenceReport" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        
        <!-- ./col -->
        <div class="col-lg-6 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h4>Fund Utilized</h4>
                    <p>For Current Financial Year</p>
                </div>
                <div class="icon">
                    <i class="ion">@ViewBag.fundUtilized</i>
                </div>
               @* <a href="/Convergence/CompleteConvergenceReport" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->

        
    </div>
</div>
